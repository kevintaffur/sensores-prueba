  "components": {
    "schemas": {
      "LecturaCreacionDto": {
        "required": [
          "estado",
          "sensorId",
          "valor"
        ],
        "type": "object",
        "properties": {
          "sensorId": {
            "pattern": "^[1-9][0-9]*$",
            "type": "integer",
            "format": "int32"
          },
          "valor": {
            "pattern": "^-?[0-9]+(\\.[0-9]{1,2})?$",
            "type": "number",
            "format": "double"
          },
          "estado": {
            "minLength": 1,
            "pattern": "^[AIai]$",
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "SensorCreacionDto": {
        "required": [
          "estado",
          "metrica",
          "ubicacionId"
        ],
        "type": "object",
        "properties": {
          "ubicacionId": {
            "pattern": "^[1-9][0-9]*$",
            "type": "integer",
            "format": "int32"
          },
          "metrica": {
            "minLength": 1,
            "pattern": "^(TEMPERATURA|HUMEDAD|PRESION|temperatura|humedad|presion|Temperatura|Humedad|Presion)$",
            "type": "string"
          },
          "estado": {
            "minLength": 1,
            "pattern": "^[AIai]$",
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "SensorModificacionDto": {
        "type": "object",
        "properties": {
          "ubicacionId": {
            "pattern": "^[1-9][0-9]*$",
            "type": "integer",
            "format": "int32",
            "nullable": true
          },
          "metrica": {
            "pattern": "^(TEMPERATURA|HUMEDAD|PRESION|temperatura|humedad|presion|Temperatura|Humedad|Presion)$",
            "type": "string",
            "nullable": true
          },
          "estado": {
            "pattern": "^[AIai]$",
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "UbicacionCreacionDto": {
        "required": [
          "estado",
          "nombre"
        ],
        "type": "object",
        "properties": {
          "nombre": {
            "maxLength": 20,
            "minLength": 3,
            "type": "string"
          },
          "estado": {
            "minLength": 1,
            "pattern": "^[AIai]$",
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "UbicacionModificacionDto": {
        "type": "object",
